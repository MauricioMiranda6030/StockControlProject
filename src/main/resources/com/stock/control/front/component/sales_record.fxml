<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="salesAnchorPane" prefHeight="559.0" prefWidth="817.0" stylesheets="@styles.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.stock.control.front.SalesRecordController">
   <children>
      <Pane prefHeight="105.0" prefWidth="817.0" style="-fx-background-color: orange;">
         <children>
            <Label layoutX="94.0" layoutY="37.0" prefHeight="40.0" prefWidth="346.0" text="Registro de Ventas" textFill="WHITE">
               <font>
                  <Font name="Verdana" size="32.0" />
               </font>
            </Label>
            <ImageView fitHeight="70.0" fitWidth="68.0" layoutX="14.0" layoutY="22.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../../../../../images/folder.png" />
               </image>
            </ImageView>
         </children>
      </Pane>
      <Button fx:id="btnSaveSale" layoutX="679.0" layoutY="129.0" mnemonicParsing="false" prefHeight="32.0" prefWidth="121.0" styleClass="add-button" text="Nueva venta" textFill="WHITE">
         <font>
            <Font name="Verdana Bold" size="13.0" />
         </font></Button>
      <TableView fx:id="tableSales" layoutX="14.0" layoutY="172.0" prefHeight="378.0" prefWidth="789.0" styleClass="table-sales">
        <columns>
          <TableColumn fx:id="colId" prefWidth="26.0" text="id" />
          <TableColumn fx:id="colDate" prefWidth="99.0" styleClass="col-date" text="Fecha" />
            <TableColumn fx:id="colProducts" prefWidth="425.0" text="Productos" />
            <TableColumn fx:id="colAmount" minWidth="0.0" prefWidth="126.0" styleClass="col-total" text="Cantidad Total" />
            <TableColumn fx:id="colFinalPrice" prefWidth="112.0" styleClass="col-price" text="Precio Final" />
        </columns>
      </TableView>
      <DatePicker fx:id="datePicker" layoutX="188.0" layoutY="135.0" prefHeight="25.0" prefWidth="139.0" />
      <Label layoutX="50.0" layoutY="140.0" prefHeight="17.0" prefWidth="130.0" text="Seleccione una fecha">
         <font>
            <Font name="Verdana" size="12.0" />
         </font>
      </Label>
      <ImageView fx:id="btnGoBack" fitHeight="32.0" fitWidth="27.0" layoutX="14.0" layoutY="136.0" onMouseClicked="#goBackToMainMenu" pickOnBounds="true" preserveRatio="true" styleClass="button">
         <image>
            <Image url="@../../../../../images/arrow.png" />
         </image>
      </ImageView>
   </children>
</AnchorPane>
